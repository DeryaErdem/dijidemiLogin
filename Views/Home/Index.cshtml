@{
    ViewData["Title"] = "Home Page";
}

<body>

    <div class="card bg-authentication rounded-0 mb-0">
        <div class="row m-0">
            <div class="col-lg-6 text-center align-self-center px-1 py-0 brand-logo">
                <a href="javascript:" id="logolink">
                    <img class="img-fluid" id="logo" src="images/DijidemiLogo.jpg" alt="LOGO">
                </a>
            </div>
            <div class="col-lg-6 col-12 p-0">
                <div class="card rounded-0 mb-0 px-2">
                    <div class="card-header pb-1">
                        <div class="card-title">
                            <h4 class="mb-0">Giriş Ekranı</h4>
                        </div>
                    </div>
                    <p class="px-2">Hoşgeldiniz, hesabınızla giriş yapabilirsiniz.</p>
                    <div class="card-content">
                        <div class="card-body pt-1">
                            <form id="frmLogin" action="javascript:;" novalidate="novalidate">
                                <fieldset class="form-label-group form-group position-relative has-icon-left">
                                    <input type="text" class="form-control validValidate" id="txtUserName" placeholder="Kullanıcı Adı" required="">
                                    <div class="form-control-position">
                                        <i class="feather icon-user"></i>
                                    </div>
                                    <label for="user-name">Kullanıcı Adı</label>
                                </fieldset>
                                <fieldset class="form-label-group position-relative has-icon-left">
                                    <input type="password" class="form-control validValidate" id="txtPassword" placeholder="Parola" required="">
                                    <div class="form-control-position">
                                        <i class="feather icon-lock"></i>
                                    </div>
                                    <label for="user-password">Parola</label>
                                </fieldset>
                                <div class="form-group d-flex justify-content-between align-items-center">
                                    <div class="text-left">
                                        <fieldset class="checkbox">
                                            <div class="vs-checkbox-con vs-checkbox-primary">
                                                <input type="checkbox" id="beniHatirla">
                                                <span class="vs-checkbox">
                                                    <span class="vs-checkbox--check">
                                                        <i class="vs-icon feather icon-check"></i>
                                                    </span>
                                                </span>
                                                <span class="">Beni Hatırla</span>
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="text-right d-flex" id="Link1">
                                        <a href="" class="card-link Link1Ad"></a>
                                    </div>
                                    <div class="text-right d-none" id="bursluluk">
                                        <a href="" class="card-link" id="burslulukLink"></a>
                                    </div>
                                </div>
                                <a href="" class="btn btn-outline-primary float-left btn-inline d-none Link2Ad waves-effect waves-light"></a>
                                <a href="javascript:;" class="btn btn-primary float-right btn-inline login_btn waves-effect waves-light" id="btnLogin" data-btntext="Giriş Yap">Giriş Yap</a>
                            </form>
                        </div>
                    </div>
                    <div class="login-footer mb-1">
                        <div class="islemSonuc"><div class="alert alert-danger"> <strong>Hata!</strong><br>Kullanıcı adı ve/veya Şifrenizi girmeniz gerekmektedir.</div></div>
                        <div class="divider">
                            <div class="divider-text"> • </div>
                        </div>
                        <div class="footer-btn d-flex d-inline px-4 font-small-2 text-bold-300">
                            <div id="footertext" class="mr-auto d-flex">
                                <img src="images/imparkSirketLogo.jpg"> &nbsp; tarafından geliştirilmiştir.
                            </div>
                            <div id="footertext2" class=""></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
